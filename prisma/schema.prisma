generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model vendas {
  idvendas      Int      @id @default(autoincrement()) // ADICIONADO @id
  idorganizacao Int
  organizacao   String?  @db.VarChar(100)
  pedido        String?  @db.VarChar(50)
  cliente       String?  @db.VarChar(150)
  dataemissao   DateTime @db.Date
  valorcusto    Decimal? @db.Decimal(12, 2)
  valorvenda    Decimal? @db.Decimal(12, 2)
  valorlucro    Decimal? @db.Decimal(12, 2)
  tipo          String?  @db.VarChar(50)
  vendedor      String?  @db.VarChar(100)
  empresa       String?  @db.VarChar(100)
}

model assessor {
  id        Int     @id @default(autoincrement())
  assessor  String
  email     String
  senhahash String
  ativo     Boolean
  admin     Boolean
}

model assessororganizacao {
  id         Int @id @default(autoincrement()) // ADICIONADO @id
  idassessor Int
  idorganizacao Int
}

model organizacao {
  idorganizacao Int @id // ADICIONADO @id
  organizacao   String
  ativo         Boolean
}

model usuario {
  idusuario     Int @id // ADICIONADO @id
  usuario       String
  email         String
  senhahash     String
  idorganizacao Int
  ativo         Boolean
  vendas        Boolean
  areceber      Boolean
  apagar        Boolean
  historico     Boolean
  estoque       Boolean
  compras       Boolean
  resultados    Boolean
  indicador     Boolean
}
